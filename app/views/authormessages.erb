<% @messages.each do |message| %>
  <div class="message">
    <h3><a href="/messages/<%= message.id %>"><small>(by: <%= message.author %>)</small></h3>
<!--     <h3><a href="/messages/<%= message.id %>"><%= message.title %> <small>(by: <%= message.author %>)</small></h3> -->
    <p>
      <i><font color="green"><%= message.content %></font></i>
    </p>
    <p>
      <i><font color="blue"><%= message.url %></font></i>
    </p>
    <hr width="50%" align="left">
  </div>
<% end %>